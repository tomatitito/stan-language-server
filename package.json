{
  "name": "stan-language-server",
  "version": "0.3.0",
  "description": "Language Server Protocol implementation for the Stan probabilistic programming language",
  "main": "dist/server/index.js",
  "module": "src/server/index.ts",
  "type": "module",
  "bin": {
    "stan-language-server": "dist/server/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "stan",
    "language-server",
    "lsp",
    "probabilistic-programming",
    "bayesian",
    "statistics"
  ],
  "author": "Jens Kouros <jens.kouros@posteo.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomatitito/stan-language-server.git"
  },
  "bugs": {
    "url": "https://github.com/tomatitito/stan-language-server/issues"
  },
  "homepage": "https://github.com/tomatitito/stan-language-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "bun build src/server/index.ts --outdir dist/server --packages external --target browser --format esm && tsc --emitDeclarationOnly --outDir dist",
    "build:binary": "bun build src/server/cli.ts --drop=console --compile --outfile bin/stan-language-server",
    "prepublishOnly": "bun run build",
    "version:set": "bun run scripts/set-version.ts",
    "publish:npm": "npm publish --access public --provenance",
    "publish:local": "bun run build && npm publish --access public",
    "publish:alpha": "bun run build && npm publish --access public --tag alpha",
    "publish:beta": "bun run build && npm publish --access public --tag beta",
    "publish:rc": "bun run build && npm publish --access public --tag rc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "check": "bun run lint && bun run typecheck",
    "test": "bun test",
    "test:unit": "bun test src/__tests__/handlers src/__tests__/language",
    "test:e2e": "bun run build:binary && bun test src/__tests__/e2e/",
    "test:e2e:ci": "bun test src/__tests__/e2e/",
    "dev": "bun run src/server/cli.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "eslint": "9.39.1",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "stanc3": "2.37.0",
    "trie-search": "2.2.1",
    "vscode-languageserver": "9.0.1",
    "vscode-languageserver-textdocument": "1.0.12",
    "vscode-uri": "3.1.0"
  }
}
